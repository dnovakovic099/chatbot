{
  "display_information": {
    "name": "Property Manager AI",
    "description": "AI-powered guest communication assistant for short-term rentals",
    "background_color": "#1a1a2e"
  },
  "features": {
    "bot_user": {
      "display_name": "Property Manager AI",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "chat:write.public",
        "commands",
        "users:read"
      ]
    }
  },
  "settings": {
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://YOUR_DOMAIN/webhook/slack/interactivity"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false
  }
}
