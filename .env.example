# ===========================================
# AI Property Manager - Environment Variables
# ===========================================

# ===== REQUIRED =====

# Hostify API
HOSTIFY_API_KEY=your_hostify_api_key

# OpenAI API (required for AI responses)
OPENAI_API_KEY=your_openai_api_key

# Database (Railway provides this automatically when you add PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# ===== OPTIONAL (have defaults) =====

# OpenPhone Integration
OPENPHONE_API_KEY=
OPENPHONE_WEBHOOK_SECRET=
OPENPHONE_NUMBER=

# Slack Integration
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_CHANNEL_L1=#guest-alerts
SLACK_CHANNEL_L2=#guest-urgent
SLACK_CHANNEL_ERRORS=#system-alerts

# AI Model Settings
OPENAI_MODEL=gpt-4o
INTENT_CLASSIFICATION_MODEL=gpt-4o-mini
SUMMARIZATION_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Confidence Thresholds
CONFIDENCE_AUTO_SEND=0.85
CONFIDENCE_SOFT_ESCALATE=0.70

# Escalation Keywords (comma-separated)
ESCALATION_KEYWORDS=police,refund,emergency,lawyer,sue,fire,flood,locked out,blood,hurt,cancel,damage,broken

# Timers
MESSAGE_BURST_DELAY_SECONDS=15
ESCALATION_L1_TIMEOUT_MINS=5
ESCALATION_L1_TIMEOUT_AFTER_HOURS_MINS=15
ESCALATION_L2_TIMEOUT_MINS=10

# Business Hours
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=21
TIMEZONE=America/Chicago

# Safety
MAX_OUTBOUND_PER_HOUR=5
DRY_RUN_MODE=false
SKIP_WEBHOOK_VERIFICATION=false

# RAG Settings
ENABLE_RAG=true
CONVERSATION_SUMMARY_THRESHOLD=15
